{
  "name": "juris-kit-app",
  "version": "0.1.1",
  "description": "Juris Full Stack SSR App - A server-side rendering application using Juris and Fastify.",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }, 
  "scripts": {
    "dev": "nodemon --watch juris --watch source --ext js --exec \"npm run build:juris && node server.js\"",
    "build:juris": "node scripts/stitcher.js --config config/stitcher.config.json",
    "copy": "npm run build:juris",
    "start": "node server.js",
    "watch:juris": "nodemon --watch juris --watch source --ext js --exec 'npm run build:juris'",
    "build": "npm run copy && node scripts/build.js",
    "build:stitch": "node scripts/stitcher.js",
    "build:minify": "node scripts/stitcher.js --config config/stitch.min.config.json",
    "build:vendor": "node scripts/stitcher.js --config config/stitch.vendor.config.json",
    "build:all": "npm run build:vendor && npm run build:stitch && npm run build:minify",
    "watch": "nodemon --watch src --ext js --exec 'npm run build:stitch'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"*.js\"",
    "setup": "node scripts/setup.js",
    "clean": "rm -rf dist/ logs/ temp/ coverage/",
    "docker:build": "docker build -t juris-kit-app .",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker/docker-compose.yml up",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "deploy": "npm run build:all && ./scripts/deploy.sh",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "init-config": "node scripts/stitcher.js --init",
    "precommit": "npm run lint && npm run test",
    "prepush": "npm run test:coverage",
    "postinstall": "npm run setup"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.3",
    "@fastify/static": "^8.2.0",
    "chokidar": "^4.0.3",
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fastify": "^5.4.0",
    "glob": "^10.4.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "juris",
    "ssr",
    "express",
    "fastify",
    "router",
    "server-side-rendering",
    "nodejs",
    "javascript",
    "web-framework"
  ],
  "author": {
    "name": "",
    "email": "",
    "url": ""
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jurisjs/juris-kit.git"
  },
  "bugs": {
    "url": "https://github.com/jurisjs/juris-kit/issues"
  },
  "homepage": "https://github.com/jurisjs/juris-kit#readme",
  "files": [
    "dist/",
    "src/",
    "config/",
    "public/",
    "server.js",
    "README.md",
    "LICENSE"
  ],
  "nodemonConfig": {
    "watch": [
      "src/",
      "config/",
      "server.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "dist/",
      "logs/",
      "tests/",
      "coverage/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/types/**"
    ],
    "coverageDirectory": "tests/coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "tests/helpers/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "port": 3000,
    "host": "localhost"
  }
}
